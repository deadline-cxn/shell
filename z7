file="$1.7z"
7z a $file $1 -mx9
if [ -f $file ]
 then
  while true; do
	echo File [$file] 
	echo Filesize: ;stat -c %s $file
    read -p "Do you wish to remove folder [$1]?" yn
    case $yn in
        [Yy]* ) echo rm -R $1; rm -R $1; break;;
        [Nn]* ) exit;;
        * ) echo "Please answer y or n.";;
    esac
  done  
fi
